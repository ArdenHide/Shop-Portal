<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MusicPortal</title>
    <!-- Icon -->
    <link rel="icon" href="~/image/favicon.ico" type="image/x-icon">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- ? -->
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- My custom style -->
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body class="">

    <!-- Modal Menu -->
    <div class="modal fade" id="menu-modal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="modal-content px-4 py-5">
                <button class="btn btn-close" data-dismiss="modal">
                    <i class="fas fa-times fa-2x text-black-50"></i>
                </button>
                <ul class="modal-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark font-weight-bold lead" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark font-weight-bold lead" asp-area="" asp-controller="Home" asp-action="Privacy">Жанры</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark font-weight-bold lead" asp-area="" asp-controller="Home" asp-action="Privacy">Альбомы</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark font-weight-bold lead" asp-area="" asp-controller="Home" asp-action="Privacy">Артисты</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark font-weight-bold lead" asp-area="" asp-controller="Home" asp-action="Privacy">Контакты</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark font-weight-bold lead" asp-area="" asp-controller="Home" asp-action="Privacy">Политика</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Modal Question -->
    <div class="modal fade" id="question-modal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="modal-content text-center px-4 py-5">
                <button class="btn btn-close" data-dismiss="modal">
                    <i class="fas fa-times fa-2x text-black-50"></i>
                </button>
                <form>
                    <p class="title-section">Задать вопрос</p>
                    <div class="form-group"><input type="text" required="" name="Name" class="form-control" placeholder="Имя*"></div>
                    <div class="form-group"><input type="text" required="" name="E-mail" class="form-control" placeholder="E-mail*"></div>
                    <div class="form-group"><textarea class="form-control" name="Message" placeholder="Ваш вопрос"></textarea></div>
                    <button class="btn btn-md btn-dark">Отправить</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal Callback -->
    <div class="modal fade" id="callback-modal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="modal-content text-center px-4 py-5">
                <button class="btn btn-close" data-dismiss="modal">
                    <i class="fas fa-times fa-2x text-black-50"></i>
                </button>
                <div class="callback-block">
                    <p class="title-section">Позвоните:</p>
                    <a class="number-callback" href="tel:0966318811">(096) 631 88 11</a>
                    <a class="number-callback" href="tel:0950583611">(095) 058 36 11</a>
                    <a class="number-callback" href="tel:0933107811">(093) 310 78 11</a>
                </div>
            </div>
        </div>
    </div>

    <header>
        <!-- Header top -->
        <div class="header-top">
            <div class="container">

                <div class="row align-items-md-center">
                    <div class="col-12 col-md-auto d-flex justify-content-center">
                        <div class="logotype">
                            <a class="navbar-brand" tabindex="-1" asp-area="" asp-controller="Home" asp-action="Index">
                                <img class="" src="~/image/logotype.svg" alt="Arden Hide" />
                            </a>
                        </div>
                    </div>

                    <div class="col-12 col-md">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="mobile-menu d-md-none">
                                <button class="btn btn-dark" data-toggle="modal" data-target="#menu-modal">
                                    <i class="fas fa-bars"></i>
                                </button>
                            </div>
                            <div class="search-block">
                                <form role="search" method="get" id="search-form" action="#">
                                    <div class="form-group m-0">
                                        <div class="input-group">
                                            <input type="text" class="form-control" placeholder="Поиск" aria-label="Поиск" aria-describedby="button-search" value="" name="search" id="s">
                                            <div class="input-group-append">
                                                <button class="btn btn-outline-secondary" type="submit" id="searchsubmit">
                                                    <i class="fas fa-search"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="d-flex justify-content-between align-items-center flex-shrink-1">
                                <div class="question-block">
                                    <button class="btn btn-dark" data-toggle="modal" data-target="#question-modal">
                                        <i class="fas fa-question"></i>
                                        <span class="d-none d-lg-inline">Задать вопрос</span>
                                    </button>
                                </div>
                                <i class="fas fa-phone fa-2x d-none text-dark pr-1 pl-2"></i>
                                <div class="callback-block">
                                    <button class="btn btn-dark" data-toggle="modal" data-target="#callback-modal">
                                        <i class="fas fa-phone"></i>
                                        <span class="d-none d-lg-inline">Позвонить</span>
                                    </button>
                                    @*<div class="d-none d-lg-inline">
                                        <a class="number-callback" href="tel:0966318811">(096) 631 88 11</a>
                                    </div>
                                    <div class="d-none d-lg-inline">
                                        <a class="number-callback" href="tel:0950583611">(095) 058 36 11</a>
                                    </div>
                                    <div class="d-none d-lg-inline">
                                        <a class="number-callback" href="tel:0933107811">(093) 310 78 11</a>
                                    </div>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <!-- Header top end -->

        @*<partial name="_LoginPartial" />*@ 

        <nav class="navbar m-0 py-0">
            <div class="d-none d-md-flex">
                <div class="container">
                    <ul class="navbar-nav d-flex flex-row">
                        <li class="nav-item">
                            <a class="nav-link text-dark font-weight-bold lead" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark font-weight-bold lead" asp-area="" asp-controller="Home" asp-action="Privacy">Жанры</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark font-weight-bold lead" asp-area="" asp-controller="Home" asp-action="Privacy">Альбомы</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark font-weight-bold lead" asp-area="" asp-controller="Home" asp-action="Privacy">Артисты</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark font-weight-bold lead" asp-area="" asp-controller="Home" asp-action="Privacy">Контакты</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark font-weight-bold lead" asp-area="" asp-controller="Home" asp-action="Privacy">Политика</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - MusicPortal - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
